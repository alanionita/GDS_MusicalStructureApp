<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/episode_list_item_background"
    android:orientation="horizontal"
    android:padding="@dimen/ep_list_item_padding"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_divider"
        android:background="@color/textIcons">
        <TextView
            android:id="@+id/episode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/episode_title"
            android:textSize="@dimen/episode_title_font"
            android:textColor="@color/primaryText"/>
        <TextView
            android:id="@+id/episode_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/episode_date"
            android:textSize="@dimen/episode_date_font"
            android:textColor="@color/secondaryText"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/episode_list_play_button"
        android:layout_width="@dimen/ep_list_item_play_button_width"
        android:layout_height="@dimen/ep_list_item_play_button_height"
        android:layout_weight="1"
        android:background="@drawable/ic_play_circle_outline"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginRight="@dimen/layout_divider"/>
</LinearLayout>